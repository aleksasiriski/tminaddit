  <script>
    function showComments() {
      var comments = document.getElementById('comments')
      if (comments.hasAttribute("hidden")) {
        comments.removeAttribute("hidden")
      }
      else {
        var att = document.createAttribute("hidden")
        att.value = ""
        comments.setAttributeNode(att)
      }
    }
    function showComment() {
      var comment = document.getElementById('comment')
      if (comment.hasAttribute("hidden")) {
        comment.removeAttribute("hidden")
      }
      else {
        var comments = document.getElementById('comments')
        var at = document.createAttribute("hidden")
        at.value = "";
        comments.setAttributeNode(at)
      }
    }
    function share() {
      console.log("share")
      if (navigator.share) {
        navigator.share({
