                    <i class="fa fa-ellipsis-h"></i>
                  </button>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                    <div class="h6 dropdown-header">Configuration</div>
                    <a class="dropdown-item" href="#">Save</a>
                    <a class="dropdown-item" href="#">Hide</a>
                    <a class="dropdown-item" href="#">Report</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body">
            <div id="time" class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i></div>
            <a class="card-link" href="#">
              <h5 id="title" class="card-title"></h5>
            </a>
            <p id="text" class="card-text"></p>
          </div>
          <div class="card-footer">
            <button id="upButton" class="transparent-btn card-link"><i class="fa fa-arrow-up" id="upVote"></i></button>
            <button id="downButton" class="transparent-btn card-link"><i class="fa fa-arrow-down"></i></button>
            <button id="shareButton" class="transparent-btn card-link" onclick="share()"><i
                class="fa fa-mail-forward"></i> Share</button>
            <button id="shareButton" class="transparent-btn card-link"><i class="fa fa-bookmark"></i> Save</button>
          </div>
        </div>
        <div class="post-comments" id="comment">
          <div>
            <div class="form-group">
              <label for="comment">Your Comment</label>
              <textarea id="theme-comment" name="comment" class="form-control" rows="3"></textarea>
            </div>
            <button id="theme-send" type="submit" class="btn btn-primary"><i class="fa fa-paper-plane"></i>
              Send</button>
          </div>
          <div class="comments-nav">
            <ul class="nav nav-pills">
              <p id="comment-number" class="num-comments" role="button">
              </p>
            </ul>
          </div>
        </div>
        <div class="bootstrap snippets bootdey">
          <div id="comments" class="blog-comment">
          </div>
        </div>
      </div>
      <div class="col-md-1">
        <a href="./"><i class="fa fa-window-close" aria-hidden="true"> close</i></a>
      </div>
